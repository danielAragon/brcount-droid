<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sessionLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="20dp"
        android:elevation="2dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#F2F2F2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:paddingStart="30dp"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    android:id="@+id/dayTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="50sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/monthTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5sp"
                    android:textSize="20sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Abril"/>

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:background="#333333"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:paddingEnd="30dp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp">
                <TextView
                    android:id="@+id/scheduleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7:00 - 9:00 pm"/>
                <TextView
                    android:id="@+id/junctionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Av. Javier Prado con Av. Salaverry"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/laneTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carril 1"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>